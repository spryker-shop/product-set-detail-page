{% extends template('page-layout-main') %}

{% define data = {
    set: _view.productSet,
    views: _view.productViews,

    title: _view.productSet.name,

    metaDescription: _view.productSet.metaDescription,
    metaKeywords: _view.productSet.metaKeywords
} %}

{% block content %}
    {% if widgetExists('ProductSetWidgetPlugin') %}
        {{ widget('ProductSetWidgetPlugin', data.set, data.views) }} {# @deprecated Use molecule('product-set', 'ProductSetWidget') instead. #}
    {% else %}
        {% include molecule('product-set', 'ProductSetWidget') ignore missing with {
            data: {
                products: data.views,
                name: data.set.name,
                description: data.set.description,
                images: data.set.imageSets.0.images | default([])
            }
        } only %}
    {% endif %}
{% endblock %}
